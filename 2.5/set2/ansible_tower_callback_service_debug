ansible_callback_debug=true

<%#
kind: snippet
name: ansible_tower_callback_service
model: ProvisioningTemplate
snippet: true
description: |
  Systemd service for running the Ansible Tower / AAP callback script one-time.
  Enhanced with curl timeouts, retries, and optional debug logging.
-%>
[Unit]
Description=Provisioning callback to Ansible Tower / AAP
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
<% debug = host_param_true?('ansible_callback_debug') ? true : false -%>
<% if host_param('ansible_extra_vars') -%>
ExecStart=/usr/bin/curl -k --max-time 60 --retry 5 --retry-delay 10 --retry-all-errors \
  -H 'Content-Type: application/json' \
  --data '{"host_config_key":"<%= host_param('ansible_host_config_key') %>", "extra_vars": <%= host_param('ansible_extra_vars') %>}' \
  https://<%= host_param('ansible_tower_fqdn') %>/api/v2/job_templates/<%= host_param('ansible_job_template_id') %>/callback/ \
  <% if debug -%> -v >>/var/log/aap-callback.log 2>&1 <% else -%> -s <% end -%>
<% else -%>
ExecStart=/usr/bin/curl -k --max-time 60 --retry 5 --retry-delay 10 --retry-all-errors \
  --data "host_config_key=<%= host_param('ansible_host_config_key') -%>" \
  https://<%= host_param('ansible_tower_fqdn') -%>/api/v2/job_templates/<%= host_param('ansible_job_template_id') -%>/callback/ \
  <% if debug -%> -v >>/var/log/aap-callback.log 2>&1 <% else -%> -s <% end -%>
<% end -%>
ExecStartPost=/usr/bin/systemctl disable ansible-callback.service ansible-callback.timer

[Install]
WantedBy=multi-user.target
